{
  "build": {
    "beforeDevCommand": "cd frontend && npm run build",
    "beforeBuildCommand": "./build.sh",
    "devPath": "../frontend/dist",
    "distDir": "../frontend/dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "NeuronBox",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "open": true,
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.micahflee.neuronbox",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "../resources/*"
      ]
    },
    "security": {
      "csp": "default-src 'self' blob: data: filesystem: ws:; connect-src http://127.0.0.1:52014;"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "NeuronBox",
        "width": 1000,
        "height": 600
      }
    ]
  }
}